@page
@model LanguageLandAcademy.Web.Areas.Administration.Pages.Managment.Level.CreateModel
@{
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="card">
                <div class="card-header">
                    اضافه کردن سطح جدید 
                </div>
                <div class="card-body" id="AddEditPanel">
                    <div class="panel-body">
                        <form class="form-inline d-flex align-items-center row" method="post">

                            <div class="form-group m-2 me-0 ms-0 col-4">
                                <label asp-for="levelItem.Name" class="control-label">نام سطح</label>
                                <input type="text" class="form-control" asp-for="levelItem.Name">
                                <span asp-validation-for="levelItem.Name" class="error"></span>
                            </div>

                            <div class="form-group m-2 me-0 ms-0 col-4">
                                <label asp-for="levelItem.Type" class="control-label">نوع سطح</label>
                                <select class="form-select" asp-for="levelItem.Type">
                                    <option value="1">عمومی/عادی</option>
                                    <option value="2">عمومی/فشرده</option>
                                    <option value="3">خصوصی/عادی</option>
                                    <option value="4">خصوصی/فشرده</option>
                                </select>
                            </div>

                            <div class="form-group m-2 me-0 ms-0 col-4">
                                <label asp-for="levelItem.Fee" class="control-label">شهریه سطح</label>
                                <input type="number" class="form-control" asp-for="levelItem.Fee">
                                <span asp-validation-for="levelItem.Fee" class="error"></span>
                            </div>

                            <div class="form-group mt-2 col-12">
                                <label asp-for="levelItem.Description" class="control-label">توضیحات</label>
                                <textarea type="text" class="form-control" asp-for="levelItem.Description"></textarea>
                                <span asp-validation-for="levelItem.Description" class="error"></span>
                            </div>
                            <div class="form-group m-2 col-9">
                                <button type="submit" class="btn btn-success waves-effect waves-light col-1 m-2">ذخیره</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>