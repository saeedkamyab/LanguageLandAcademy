@page
@model LanguageLandAcademy.Web.Areas.Administration.Pages.Managment.TermClass.IndexModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "ترم ها / دوره ها";
}


<div class="panel-heading">
    <h4 class="page-title pull-right">@ViewData["title"]</h4>
    <a class="btn btn-sm btn-watermelon text-light" asp-page="/Managment/TermClass/Create" asp-area="Administration">
        <i class="icon-plus-circled"></i>
        <span>ایجاد ترم/ دوره</span>
    </a>
</div>
<hr />

<div class="card">
    <div class="card-header bg-secondary text-light">لیست ترم/ دوره</div>
    <div class="card-body p-0">
        <table id="datatable" class="table table-striped table-bordered m-0">
            <thead>
                <tr>
                    <th>شناسه ترم/ کلاس</th>
                    <th>ساعت شروع کلاس</th>
                    <th>ساعت پایان کلاس</th>
                    <th>روزهای</th>
                    <th>سطح</th>
                    <th>اتاق</th>
                    <th>تاریخ شروع ترم</th>
                    <th>تاریخ پایان ترم</th>
                    <th>وضعیت</th>
                    <th>تاریخ آخرین ویرایش</th>
                    <th>توضیحات</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.termClasses)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.StartTime</td>
                        <td>@item.EndTime</td>
                        <td>@item.Day</td>
                        <td>@item.LevelId</td>
                        <td>@item.Room</td>
                        <td>@item.StartDate</td>
                        <td>@item.EndDate</td>
                        @if (@item.Status==true)
                        {
                            <td>
                                <div class="rounded-circle bg-success" style="width:12px; height:12px;"></div>
                            </td>
                        }
                        else
                        {
                        <td>
                            <div class="rounded-circle bg-danger" style="width:12px; height:12px;"></div>
                        </td>
                        }
                        <td>@item.LastUpdate</td>
                        <td>@item.Description</td>
                        <td>

                            @if (item.IsRemoved)
                            {
                                <a class="btn btn-outline-primary btn-sm ms-2" asp-page="./Index" asp-page-handler="Restore" asp-route-id="@item.Id"
                                   data-toggle="tooltip" data-placement="top" title="بازیابی">
                                    <i class="icon-arrows-cw"></i>
                                    <span>بازیابی</span>
                                </a>
                            }
                            else
                            {
                                <a class="btn btn-outline-danger btn-sm ms-2" asp-page="./Index" asp-page-handler="Remove" asp-route-id="@item.Id"
                                   data-toggle="tooltip" data-placement="top" title="حذف">
                                    <i class="icon-trash-empty"></i>
                                    <span>حذف</span>
                                </a>
                            }
                            @if (item.Status == true)
                            {
                                <a class="btn btn-outline-success btn-sm" asp-page="/Managment/Register/Create"
                                   asp-route-Id="@item.Id"
                                   data-toggle="tooltip" data-placement="top" title="اضافه کردن افراد">
                                    <i class="icon-plus-circled"></i>
                                    <span>افراد</span>
                                </a>
                            }
                            <a class="btn btn-outline-MattPurple btn-sm me-1" asp-page="/Managment/Register/Details"
                               asp-route-Id="@item.Id"
                               data-toggle="tooltip" data-placement="top" title="جزئیات">
                                <i class="icon-table"></i>
                               @*  <span>جزئیات</span> *@
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</div>
