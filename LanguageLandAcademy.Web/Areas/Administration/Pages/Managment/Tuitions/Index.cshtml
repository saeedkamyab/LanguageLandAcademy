@page
@model LanguageLandAcademy.Web.Areas.Administration.Pages.Managment.Tuitions.IndexModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "مدیریت شهریه ها";
}
<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a class="btn btn-sm btn-watermelon text-light" asp-page="Create" asp-area="Administration">
                <i class="icon-plus-circled"></i>
                <span>ایجاد فیش</span>
            </a>
        </p>
    </div>
</div>
<hr />

<div class="row mt-4" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">

            <div class="card">
                <div class="card-header bg-secondary text-light">
                    لیست فیش ها
                </div>
                <div class="card-body p-0">
                    <table id="datatable" class="table table-striped table-bordered m-0">
                        <thead>
                            <tr>
                                <th>شناسه رسید مالی</th>
                                <th>به نام</th>
                                <th>مبلغ</th>
                                <th>تاریخ</th>
                                <th>وضعیت</th>
                                <th>تاریخ پرداخت</th>
                                <th>توضیحات</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.tuitions)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.OwnerId</td>
                                    <td>@item.TuitionAmount</td>
                                    <td>@item.CreateDate</td>
                                    <td>@item.TuitionStatus</td>
                                    <td>@item.TuitionPayDate</td>
                                    <td>@item.TuitionDescription</td>
                                    <td>

                                        @if (item.IsRemoved)
                                        {
                                            <a class="btn btn-outline-primary btn-sm" asp-page="./Index" asp-page-handler="Restore" asp-route-id="@item.Id"
                                               data-toggle="tooltip" data-placement="top" title="بازیابی">
                                                <i class="icon-arrows-cw"></i>
                                                <span>بازیابی</span>
                                            </a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-outline-danger btn-sm" asp-page="./Index" asp-page-handler="Remove" asp-route-id="@item.Id"
                                               data-toggle="tooltip" data-placement="top" title="حذف">
                                                <i class="icon-trash-empty"></i>
                                                <span>حذف</span>
                                            </a>
                                        }
                                        @if (item.TuitionStatus == false)
                                        {
                                            <a class="btn btn-outline-success btn-sm" asp-page="./Index" asp-page-handler="Pay" asp-route-id="@item.Id"
                                               data-toggle="tooltip" data-placement="top" title="پرداخت">
                                                <i class="icon-money"></i>
                                                <span>پرداخت</span>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
