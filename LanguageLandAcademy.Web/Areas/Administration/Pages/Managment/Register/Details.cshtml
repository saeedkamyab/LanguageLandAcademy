@page
@model LanguageLandAcademy.Web.Areas.Administration.Pages.Managment.RegisterDetails.Details
@{
}


<div class="row mt-4">
    <div class="col-md-12">
        <div class="panel panel-default">

            <div class="card">
                <div class="card-header bg-secondary text-light">
                    لیست اشخاص این ترم / دوره
                </div>

                <div class="card-body p-0">
                    <table id="datatable" class="table table-striped table-bordered m-0">
                        <thead>
                            <tr>
                                <th>عکس</th>
                                <th>نام</th>
                                <th>نام پدر</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>

                            @if (Model.Registers != null)
                            {
                                foreach (var re in Model.Registers)
                                {
                                    var regItem = Model.accounts.SingleOrDefault(s => s.Id == re.PeopleId);
                                    if (regItem != null)
                                    {
                                        <tr>
                                            <td>
                                                @if (regItem.ProfilePhoto == "unImage.png" || regItem.ProfilePhoto == null)
                                                {
                                                    <img src="~/images/unImage.png" class="profilePhoto" />
                                                }
                                                else
                                                {
                                                    <img src="~/ProfilePictures/@regItem.ProfilePhoto" class="profilePhoto" />
                                                }

                                            </td>
                                            <td>@regItem.FullName</td>
                                            <td>@regItem.FName</td>

                                            <td>
                                                <a class="btn btn-outline-primary btn-sm" asp-page="Certificate" asp-route-Id="@re.Id"
                                                   data-toggle="tooltip" data-placement="top" title="کارنامه">
                                                    <i class="icon-graduation-cap"></i>
                                                    <span>کارنامه</span>
                                                </a>

                                                <a class="btn btn-outline-watermelon btn-sm" asp-page="PresentAbsent" asp-route-Id="@re.Id"
                                                   data-toggle="tooltip" data-placement="top" title="حضور غیاب">
                                                    <i class="icon-ok-circled"></i>
                                                    <span>حضور غیاب</span>
                                                </a>
                                            </td>
                                        </tr>

                                    }

                                }

                            }
                        
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>