@page
@model LanguageLandAcademy.Web.Areas.Administration.Pages.Managment.Register.CreateModel
@{
}

<div class="row mt-4">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="card">
                <div class="card-header">
                    جستجوی کاربران
                </div>
                <div class="card-body">
                    <div class="panel-body">
                        <form class="form-inline row" role="form" method="get">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group col-3">
                                <input type="hidden" asp-for="tId" />
                                <input class="form-control m-2" asp-for="searchModel.Fullname"
                                       placeholder="نام">
                               </div>
                            <button type="submit" class="btn btn-success waves-effect waves-light col-1 m-2"
                                    >
                                جستجو
                            </button>
                            <a class="btn btn-primary waves-effect waves-light col-1 m-2" asp-page="/Managment/Register/Create" asp-route-id="@Model.tId">مشاهده همه</a>
                            <span asp-validation-for="searchModel.Fullname" class="text-danger col-3 m-2"></span>
                        </form>
                      </div>
                    @*Search Result Table*@
                    <div class="row mt-4" id="ProductCategoriesDiv">
                        <div class="col-md-12">
                            <div class="panel panel-default">

                                <div class="card">
                                    <div class="card-header">
                                        نتیجه جستجو
                                    </div>
                                    <div class="card-body p-0">
                                        <table id="datatable" class="table table-striped table-bordered m-0">
                                            <thead>
                                                <tr>
                                                    <th>شناسه</th>
                                                    <th>عکس</th>
                                                    <th>نام</th>
                                                    <th>نام پدر</th>
                                                    <th>نقش</th>
                                                    <th>عملیات</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model.accounts != null)
                                                {
                                                    @foreach (var item in Model.searchResult)
                                                    {
                                                        <tr class="align-middle">
                                                            <td>@item.Id</td>
                                                            <td>
                                                                @if (item.ProfilePhoto == "unImage.png" || item.ProfilePhoto == null)
                                                                {
                                                                    <img src="~/images/unImage.png" class="profilePhoto" />
                                                                }
                                                                else
                                                                {
                                                                    <img src="~/ProfilePictures/@item.ProfilePhoto" class="profilePhoto" />
                                                                }

                                                            </td>
                                                            <td>@item.FullName</td>
                                                            <td>@item.FName</td>
                                                            <td>@item.Role</td>
                                                            <td class="align-middle">
                                                                @if (Model.Registers == null)
                                                                {
                                                                    <form method="post">
                                                                        <input type="hidden" asp-for="registration.TermClassId" value="@Model.tId" />
                                                                        <input type="hidden" asp-for="registration.PeopleId" value="@item.Id" />
                                                                        <button type="submit" class="btn btn-outline-primary btn-sm"
                                                                                asp-page-handler="AddToTerm"
                                                                                data-toggle="tooltip" data-placement="top" title="بازیابی">
                                                                            <i class="icon-plus-circled"></i>
                                                                            <span>اضافه کردن به ترم / دوره</span>
                                                                        </button>
                                                                    </form>
                                                                }
                                                                else
                                                                {
                                                                    var regItem = Model.Registers.SingleOrDefault(s => s.PeopleId == @item.Id);
                                                                    @if (regItem != null)
                                                                    {
                                                                        @*    <a class="btn btn-success" onclick="AddPerson(@item.Id,'@item.FullName')">اضافه کردن</a>
                                                        *@
                                                                        <form method="post">
                                                                            <input type="hidden" asp-for="registration.TermClassId" value="@Model.tId" />
                                                                            <button type="submit" class="btn btn-outline-danger btn-sm"
                                                                                    asp-page-handler="DeleteFromTerm"
                                                                                    asp-route-id="@regItem.Id"
                                                                                    asp-page="./Create"
                                                                                    data-toggle="tooltip" data-placement="top" title="حذف">
                                                                                <i class="icon-trash-empty"></i>
                                                                                <span>حذف از ترم / دوره</span>
                                                                            </button>
                                                                        </form>


                                                                    }
                                                                    else
                                                                    {
                                                                        <form method="post">
                                                                            <input type="hidden" asp-for="registration.TermClassId" value="@Model.tId" />
                                                                            <input type="hidden" asp-for="registration.PeopleId" value="@item.Id" />
                                                                            <button type="submit" class="btn btn-outline-primary btn-sm"
                                                                                    asp-page-handler="AddToTerm"
                                                                                    data-toggle="tooltip" data-placement="top" title="بازیابی">
                                                                                <i class="icon-plus-circled"></i>
                                                                                <span>اضافه کردن به ترم / دوره</span>
                                                                            </button>
                                                                        </form>
                                                                    }
                                                                }
                                                            </td>
                                                        </tr>

                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


<div class="row mt-3 mb-3">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="card">
                <div class="card-header">
                    افراد ثبت نامی در این ترم / دوره
                </div>
                <div class="card-body">
                    <div class="panel-body">
                        <div>
                        </div>
                        <ul class="list-group overflow-auto" style="height:150px" id="RegisteredPeople">
                            @if (Model.Registers != null)
                            {
                                foreach (var re in Model.Registers)
                                {
                                    var regItem = Model.accounts.SingleOrDefault(s => s.Id == re.PeopleId);
                                    if (regItem != null)
                                    {
                                        <li class="list-group-item d-flex align-items-center justify-content-between" data-id="@regItem.Id">
                                            <span>@regItem.FullName</span>
                                        </li>
                                    }

                                }

                            }

                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
