@page
@model LanguageLandAcademy.Web.Areas.Administration.Pages.Accounts.Role.IndexModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "مدیریت نقش ها";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" asp-page="Create">ایجاد نقش جدید</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="card">
        
            </div>

        </div>
    </div>
</div>

<div class="row mt-4" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">

            <div class="card">
                <div class="card-header">
                    لیست نقش ها (@Model.roles.Count)
                </div>
                <div class="card-body p-0">
                    <table id="datatable" class="table table-striped table-bordered m-0">
                        <thead>
                            <tr>
                                <th>کد</th>
                                <th>نقش</th>
                                <th>تاریخ ایجاد</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.roles)
                            {
                                <tr>
                                    <td>@item.Id</td>                              
                                    <td>@item.Name</td>  
                                    <td>@item.CreationDate</td>
                                    <td>
                                        <a class="btn btn-warning waves-effect waves-light m-b-5"
                                           asp-page="Edit" asp-route-Id="@item.Id">
                                            <i class="fa fa-edit"></i> ویرایش
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}
