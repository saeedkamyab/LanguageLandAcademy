@page
@model LanguageLandAcademy.Web.Areas.Administration.Pages.Accounts.Account.EditModel
@{
}

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="account.FullName" class="control-label">نام</label>
                    <input type="text" class="form-control" asp-for="account.FullName">
                    <span asp-validation-for="account.FullName" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="account.UserName" class="control-label">نام کاربری</label>
                    <input type="text" class="form-control" asp-for="account.UserName">
                    <span asp-validation-for="account.UserName" class="error"></span>
                </div>
            </div>

            <div class="form-group m-3">
                <label asp-for="account.Roles" class="control-label"></label>
                <select class="form-control" asp-for="account.RoleId"
                        asp-items="Model.Roles">
                    <option value="0">نقش</option>
                </select>

                <span asp-validation-for="account.RoleId" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="account.ProfilePhoto" class="control-label">عکس پروفایل</label>
                        <input type="file" class="form-control" asp-for="account.ProfilePhoto" accept="image/*">
                        <span asp-validation-for="account.ProfilePhoto" class="error"></span>
                    </div>
                </div>
            </div>
            <input type="hidden" asp-for="account.Id" value="@Model.account.Id" />
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
            <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
        </div>
</form>