@page
@model LanguageLandAcademy.Web.Areas.Administration.Pages.Accounts.Account.IndexModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "مدیریت کاربران";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" asp-page="Create">ایجاد کاربر جدید</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="card">
                <div class="card-header">
                    جستجوی کاربران
                </div>
                <div class="card-body">
                    <div class="panel-body">
                        <form class="form-inline row" role="form" method="get">
                            <div class="form-group col-3">
                                <input class="form-control m-2" asp-for="searchModel.Fullname" placeholder="نام">
                            </div>
                            <div class="form-group col-3">
                                <input class="form-control m-2" asp-for="searchModel.Username" placeholder="نام کاربری">
                            </div>

                            <div class="form-group col-3">
                                <select class="form-control m-2" asp-for="searchModel.RoleId" asp-items="Model.Roles">
                                    <option value="0">نقش ...</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-success waves-effect waves-light col-1 m-2">جستجو</button>
                            <a class="btn btn-primary waves-effect waves-light col-1 m-2" asp-page="./Index">مشاهده همه</a>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="row mt-4" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">

            <div class="card">
                <div class="card-header">
                    لیست کاربران (@Model.accounts.Count)
                </div>
                <div class="card-body p-0">
                    <table id="datatable" class="table table-striped table-bordered m-0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>عکس</th>
                                <th>نام</th>
                                <th>نام کاربری</th>
                                <th>نقش</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.accounts)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>
                                        @if (item.ProfilePhoto == null)
                                        {
                                            <img src="~/images/unImage.png" style="width: 70px; height: 70px" />
                                        }
                                        else
                                        {
                                            <img src="~/ProductPictures/@item.ProfilePhoto" style="width: 70px; height: 70px" />
                                        }

                                    </td>
                                    <td>@item.FullName</td>
                                    <td class="LeftTorightItems">@item.UserName</td>
                                    <td>@item.Role</td>
                                    <td>@item.CreationDate</td>
                                    <td>
                                        <a class="btn btn-warning waves-effect waves-light m-b-5"
                                           asp-page="Edit" asp-route-Id="@item.Id">
                                            <i class="fa fa-edit"></i> ویرایش
                                        </a>
                                        <a class="btn btn-primary waves-effect waves-light m-b-5"
                                           asp-page="Edit" asp-route-Id="@item.Id">
                                            <i class="fa fa-key"></i> تغییر رمز
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}