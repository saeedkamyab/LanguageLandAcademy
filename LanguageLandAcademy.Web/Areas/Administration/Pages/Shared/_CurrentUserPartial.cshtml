@inject ZeroFramework.Application.Common.IAuthHelper authHelper;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var currentAccount = authHelper.CurrentAccountInfo();

}

@if (currentAccount.ProfilePhoto == "unImage.png")
{
    <img src="~/images/unImage.png" class="profilePhoto" />
}
else
{
    <img src="~/ProfilePictures/@currentAccount.ProfilePhoto" class="profilePhoto" />
}
<h3>@currentAccount.Fullname</h3>
<p>@currentAccount.Role</p> 